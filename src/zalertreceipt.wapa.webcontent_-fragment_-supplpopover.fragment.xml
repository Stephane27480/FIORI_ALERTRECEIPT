<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:forms="sap.ui.layout.form" xmlns:layout="sap.ui.layout">                                                                                                                                 
	<ResponsivePopover title="{SupplierTxt}">                                                                                                                                                                                                                     
		<content>                                                                                                                                                                                                                                                    
					<forms:SimpleForm labelSpanL="12" labelSpanM="12" labelSpanS="12" layout="ResponsiveGridLayout">                                                                                                                                                          
						<Label design="Bold" text="{i18n>popFormCode}"/>                                                                                                                                                                                                         
						<Text text="{Supplier}"/>                                                                                                                                                                                                                                
						<Label design="Bold" text="{i18n>popFormAdress}"/>                                                                                                                                                                                                       
						<Text text="{SuppHouseNum}, {SuppStreet}"/>                                                                                                                                                                                                              
						<Text text="{SuppHPostCode} {SuppCity} {SuppCountry}"/>                                                                                                                                                                                                  
						<Label design="Bold" text="{i18n>popFormTel}"/>                                                                                                                                                                                                          
						<Link text="{SuppTel}" press="handleTelPress"/>                                                                                                                                                                                                          
						<Label design="Bold" text="{i18n>popFormEmail}"/>                                                                                                                                                                                                        
						<Link text="{SuppEmail}" press="handleMailPress"/>                                                                                                                                                                                                       
						<Image id="supplierMapId" src="--" width="300px"/>                                                                                                                                                                                                       
					</forms:SimpleForm>                                                                                                                                                                                                                                       
		</content>                                                                                                                                                                                                                                                   
	</ResponsivePopover>                                                                                                                                                                                                                                          
</core:FragmentDefinition>                                                                                                                                                                                                                                     