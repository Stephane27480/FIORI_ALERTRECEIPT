<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:forms="sap.ui.layout.form"                                                                                                                                 
  xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" controllerName="com.codilog.controller.Root">                                                                                                                                                          
  <!--  <App pages="{/PoItemToReceiptSet}"> -->                                                                                                                                                                                                                
  <App>                                                                                                                                                                                                                                                        
    <pages>                                                                                                                                                                                                                                                    
      <Page title="{i18n>title}" showFooter="false">                                                                                                                                                                                                           
        <content>                                                                                                                                                                                                                                              
          <ObjectHeader title="{i18n>orderLabel} {OrderNumber}" number="{i18n>ItemLabel} {ItemNumber}"                                                                                                                                                         
            numberUnit="{i18n>ScheduleLabel} {ScheduleNumber}" intro="{i18n>CreatedAt} {path: 'CreatedAt', formatter: '.formatter.formatDate'}"                                                                                                                
            introActive="true" titleActive="true" iconActive="false" id="__header0" backgroundDesign="Solid"/>                                                                                                                                                 
          <layout:Grid defaultSpan="L6 M6 S12" hSpacing="2px" width="100%">                                                                                                                                                                                    
            <layout:content>                                                                                                                                                                                                                                   
              <forms:SimpleForm labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="12" breakpointM="400" layout="ResponsiveGridLayout" width="100%">                                                                                                    
                <Title class="myFormTitle" text="{i18n>genformtitle}" titleStyle="H3"/>                                                                                                                                                                        
                <Label text="{i18n>formPurchOrg}" design="Bold"/>                                                                                                                                                                                              
                <Text text="{PurchOrg} - {PurchOrgTxt}"/>                                                                                                                                                                                                      
                <Label text="{i18n>formComp}" design="Bold"/>                                                                                                                                                                                                  
                <Text text="{CompanyCode} - {CompanyCodeTxt}"/>                                                                                                                                                                                                
                <Label text="{i18n>formPlant}" design="Bold"/>                                                                                                                                                                                                 
                <Text text="{Plant} - {PlantTxt}"/>                                                                                                                                                                                                            
                <Label text="{i18n>formSupplier}" design="Bold"/>                                                                                                                                                                                              
                <Link id="SupplierId" text="{SupplierTxt}" press="handleSupplierPress"/>                                                                                                                                                                       
              </forms:SimpleForm>                                                                                                                                                                                                                              
              <forms:SimpleForm labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="12" breakpointM="400" layout="ResponsiveGridLayout" width="100%">                                                                                                    
                <Title class="myFormTitle" text="{i18n>detformtitle}" titleStyle="H3"/>                                                                                                                                                                        
                <Label text="{i18n>formMaterial}" design="Bold"/>                                                                                                                                                                                              
                <Text text="{MaterialNumber}"/>                                                                                                                                                                                                                
                <Label text="{i18n>formDescr}" design="Bold"/>                                                                                                                                                                                                 
                <Text text="{ShortText}"/>                                                                                                                                                                                                                     
                <Label text="{i18n>formMatGrp}" design="Bold"/>                                                                                                                                                                                                
                <Text text="{MaterialGroup} - {MaterialGroupTxt}"/>                                                                                                                                                                                            
                <Label text="{i18n>formQty}" class="myFormSpacer" design="Bold"/>                                                                                                                                                                              
                <Text text="{OrderedQty} {OrderedUnit}" class="myFormSpacer myQtyStyle"/>                                                                                                                                                                      
                <Label text="{i18n>formDelDat}" design="Bold"/>                                                                                                                                                                                                
                <Text class="myDteStyle" text="{path: 'DeliveryDate', formatter: '.formatter.formatDate'}"/>                                                                                                                                                   
              </forms:SimpleForm>                                                                                                                                                                                                                              
            </layout:content>                                                                                                                                                                                                                                  
          </layout:Grid>                                                                                                                                                                                                                                       
          <IconTabBar id="idIconTabBar" select="handleIconTabBarSelect" class="sapUiResponsiveContentPadding">                                                                                                                                                 
            <items>                                                                                                                                                                                                                                            
              <IconTabFilter icon="sap-icon://cart-approval" iconColor="Positive" design="Horizontal" text="{i18n>iconReceipt}">                                                                                                                               
                <VBox alignItems="Center" fitContainer="true">                                                                                                                                                                                                 
                  <HBox width="100%" justifyContent="Center" wrap="Wrap" class="myHBoxWrapped">                                                                                                                                                                
                    <FlexBox class="sapUiMediumMarginBeginEnd">                                                                                                                                                                                                
                      <Label text="{i18n>inputQtyToReceipt}" class="alignLabInp" design="Bold" labelFor="qtyToReceipt"/>                                                                                                                                       
                      <Input id="qtyToReceiptId" width="125px" value="{OpenedQty}"/>                                                                                                                                                                           
                    </FlexBox>                                                                                                                                                                                                                                 
                  <FlexBox class="sapUiMediumMarginBeginEnd" >                                                                                                                                                                                                 
                      <Label text="{i18n>inputStorage}" class="alignLabInp" design="Bold" visible="{= ${ItemType} === '0' ? true : false }"/>                                                                                                                  
                      <Input width="125px" value="{StorageLocation}" visible="{= ${ItemType} === '0' ? true : false }"                                                                                                                                         
                             valueHelpRequest="onStorageLocValueHelpRequested" showValueHelp="true">                                                                                                                                                           
							<customData>                                                                                                                                                                                                                                            
								<core:CustomData key="Filters" value="{Plant}"/>                                                                                                                                                                                                       
							</customData>                      	                                                                                                                                                                                                                    
                      </Input>                                                                                                                                                                                                                                 
                  </FlexBox>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                     
                  </HBox>                                                                                                                                                                                                                                      
            	   <FlexBox class="sapUiMediumMarginBeginEnd">                                                                                                                                                                                                    
                      <Text text=" " class="mySpacer"/>                                                                                                                                                                                                        
                      <Switch id="switchFinalDelivId" state="false"/>                                                                                                                                                                                          
                      <Label text="{i18n>inputFinalDeliv}" class="alignLabInp" design="Bold" labelFor="switchFinalDelivId"/>                                                                                                                                   
                    </FlexBox>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                         
                  <!--                                                                                                                                                                                                                                         
                  <HBox width="100%" justifyContent="Center">                                                                                                                                                                                                  
                    <Label text="{i18n>inputQtyToReceipt}" class="alignLabInp" design="Bold" labelFor="qtyToReceipt"/>                                                                                                                                         
                    <Input id="qtyToReceiptId" width="125px" value="{OpenedQty}"/>                                                                                                                                                                             
                    <Text text=" " class="mySpacer"/>                                                                                                                                                                                                          
                    <Switch id="switchFinalDelivId" state="false"/>                                                                                                                                                                                            
                    <Label text="{i18n>inputFinalDeliv}" class="alignLabInp" design="Bold" labelFor="switchFinalDelivId"/>                                                                                                                                     
                  </HBox>                                                                                                                                                                                                                                      
                  -->                                                                                                                                                                                                                                          
                </VBox>                                                                                                                                                                                                                                        
                <VBox alignItems="Center">                                                                                                                                                                                                                     
                  <items>                                                                                                                                                                                                                                      
                    <HBox id="__hbox3">                                                                                                                                                                                                                        
                      <Button text="{i18n>Save}" type="Emphasized" icon="sap-icon://save" press="onGrSave"/>                                                                                                                                                   
                    </HBox>                                                                                                                                                                                                                                    
                  </items>                                                                                                                                                                                                                                     
                </VBox>                                                                                                                                                                                                                                        
              </IconTabFilter>                                                                                                                                                                                                                                 
              <IconTabFilter icon="sap-icon://calendar" iconColor="Neutral" design="Horizontal" text="{i18n>iconReschedule}">                                                                                                                                  
                <VBox alignItems="Center">                                                                                                                                                                                                                     
                  <HBox>                                                                                                                                                                                                                                       
                    <Label text="{i18n>inputDelivDate}" class="alignLabInp" design="Bold" labelFor="newDeliveryDate"/>                                                                                                                                         
                    <DatePicker id="newDeliveryDateId"                                                                                                                                                                                                         
                                value="{path: 'NewDeliveryDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd/MM/yyyy', strictParsing: true , UTC: true}}"/>                                                                                   
<!--                    <DatePicker id="newDeliveryDateId" value="{path: 'NewDeliveryDate', formatter: '.formatter.formatDate'}" change="handleNewDelivDate"/>                                                                                                 
-->                                                                                                                                                                                                                                                            
                  </HBox>                                                                                                                                                                                                                                      
                  <HBox>                                                                                                                                                                                                                                       
                    <Button text="{i18n>Save}" type="Emphasized" icon="sap-icon://save" press="onDateSave"/>                                                                                                                                                   
                  </HBox>                                                                                                                                                                                                                                      
                </VBox>                                                                                                                                                                                                                                        
              </IconTabFilter>                                                                                                                                                                                                                                 
              <IconTabFilter icon="sap-icon://approvals" iconColor="Critical" design="Horizontal" text="{i18n>iconFinal}">                                                                                                                                     
                <VBox alignItems="Center">                                                                                                                                                                                                                     
                  <HBox>                                                                                                                                                                                                                                       
                    <Button text="{i18n>btnfinalDelivery}" type="Emphasized" icon="sap-icon://accept" press="onFinalSave"/>                                                                                                                                    
                  </HBox>                                                                                                                                                                                                                                      
                </VBox>                                                                                                                                                                                                                                        
              </IconTabFilter>                                                                                                                                                                                                                                 
            </items>                                                                                                                                                                                                                                           
          </IconTabBar>                                                                                                                                                                                                                                        
        </content>                                                                                                                                                                                                                                             
        <footer>                                                                                                                                                                                                                                               
          <Toolbar>                                                                                                                                                                                                                                            
            <ToolbarSpacer/>                                                                                                                                                                                                                                   
          </Toolbar>                                                                                                                                                                                                                                           
        </footer>                                                                                                                                                                                                                                              
      </Page>                                                                                                                                                                                                                                                  
    </pages>                                                                                                                                                                                                                                                   
  </App>                                                                                                                                                                                                                                                       
</mvc:View>                                                                                                                                                                                                                                                    